# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=production
API_VERSION=v1

# ==========================================
# FRONTEND
# ==========================================
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Frontend API Configuration (Vite)
VITE_API_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:3000
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend API Configuration (React)
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id
REACT_APP_GOOGLE_CLIENT_SECRET=your_google_client_secret
REACT_APP_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==========================================
# CACHE (Redis)
# ==========================================
REDIS_URL=redis://default:password@your_redis_host:6379
CACHE_TTL=600
TTL_BOOKING_DRAFT=1800
TTL_SEAT_SELECTION=900
TTL_PAYMENT_STATUS=3600
TTL_USER_SESSION=86400

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET=your_jwt_secret_key_32_characters_or_more
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth (Google)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ==========================================
# EMAIL SERVICE (SendGrid or Mailjet)
# ==========================================
EMAIL_SERVICE=sendgrid
# SendGrid API
SENDGRID_API_KEY=your_sendgrid_api_key
# Mailjet API (alternative to SendGrid)
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key
EMAIL_FROM=noreply@example.com

# ==========================================
# SMS SERVICE (Twilio) - Optional
# ==========================================
SMS_SERVICE=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==========================================
# WEATHER API
# ==========================================
OPENWEATHER_API_KEY=your_openweather_api_key

# ==========================================
# PAYMENT SERVICE (PayOS)
# ==========================================
PAYOS_API_URL=https://sandbox-api.payos.vn
PAYOS_API_KEY=your_payos_api_key
PAYOS_CLIENT_ID=your_payos_client_id
PAYOS_CHECKSUM_KEY=your_payos_checksum_key

# Alternative Payment (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key

# ==========================================
# INTERNAL SERVICES URLs
# ==========================================
BOOKING_SERVICE_URL=http://booking-service:3004
NOTIFICATION_SERVICE_URL=http://notification-service:3003
PAYMENT_SERVICE_URL=http://payment-service:3005

# ==========================================
# CHATBOT (Google Gemini & Groq)
# ==========================================
# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key
GOOGLE_AI_MODEL=gemini-2.5-flash
GOOGLE_AI_TEMPERATURE=0.7
GOOGLE_AI_MAX_TOKENS=1000

# Groq AI Configuration (Alternative)
GROQ_AI_API_KEY=your_groq_ai_api_key
GROQ_AI_MODEL=llama-3.1-8b-instant
GROQ_AI_TEMPERATURE=0.7
GROQ_AI_MAX_TOKENS=1000

# Chatbot Settings
SESSION_EXPIRY_MINUTES=30
MAX_CONVERSATION_HISTORY=20

# ==========================================
# FILE UPLOAD (Cloudinary)
# ==========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
